<h1>My tasks</h1>

<%= link_to "Add a new task", new_task_path %>

<% @tasks.each do |task| %>
<h2><%= task.name %></h2>
<p><%= task.description %></p>
<p><%= task.completed? %></p>
<%= link_to "To task", task_path(task) %>
<%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "are you sure?"} %>

<% end %>
